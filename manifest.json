{
  "name": "Link Checker",
  "version": "1.0",
  "description": "Quick and dirty link checker. Unreached links are dumped in
  the console with the failed XHR.",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Link Checker"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "file:///*"],
      "css": ["jquery-ui.css"],
      "js": ["jquery.js", "jquery-ui.js", "linkchecker.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}
