{
  "name": "Link Checker",
  "version": "1.2.1",
  "description": "Link checking using XHR.",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Link Checker"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["URI.js", "jquery.js", "linkchecker.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
