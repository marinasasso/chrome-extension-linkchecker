{
  "name": "Link Checker",
  "manifest_version": 2,
  "version": "1.3.0",
  "description": "Link checking using XHR.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Link Checker"
  },
  "background": {
    "persistent": false,
    "scripts": ["URI.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.js", "linkchecker.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
