{
  "name": "Link Checker",
  "version": "1.0",
  "description": "Link checker dumps failed links in console. Icon image: http://www.geekalerts.com/broken-image-necklace",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Link Checker"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["jquery-ui.css"],
      "js": ["jquery.js", "jquery-ui.js", "linkchecker.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}
